{
  "name": "example",
  "config": {
    "chart": "github.com/ColDog/navigator//charts/service",
    "deploy": "nav-deploy",
    "values": { "image": true }
  },
  "stages": [
    {
      "name": "review",
      "review": true,
      "auto": true,
      "clusters": [
        {
          "name": "minikube",
          "namespace": "default",
          "values": {
            "image": {
              "repository": "coldog/nginx"
            }
          }
        }
      ]
    },
    {
      "name": "staging",
      "promote": true,
      "auto": true,
      "clusters": [
        {
          "name": "staging",
          "namespace": "default",
          "values": {
            "image": {
              "repository": "coldog/nginx"
            }
          }
        }
      ]
    },
    {
      "name": "production",
      "auto": false,
      "clusters": [
        {
          "name": "minikube-1",
          "namespace": "default",
          "values": {
            "image": {
              "repository": "coldog/nginx"
            }
          }
        },
        {
          "name": "minikube-2",
          "namespace": "default",
          "values": {
            "image": {
              "repository": "coldog/nginx"
            }
          }
        },
        {
          "name": "minikube-3",
          "namespace": "default",
          "values": {
            "image": {
              "repository": "coldog/nginx"
            }
          }
        }
      ]
    }
  ]
}
