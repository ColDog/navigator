<%= form_for :app, method: method, url: url do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <label for="name">Name</label>
        <%= f.text_field :name, class: 'form-control', id: 'name', placeholder: 'Name', value: name %>
      </div>

      <% if stages %>
        <div class="form-group">
          <label for="stages">Stages</label>
          <%= f.text_area :stages, class: 'form-control codemirror', id: 'stages', placeholder: '# Stages', value: stages %>
        </div>
      <% end %>

    </div>
    <div class="card-footer">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
