<%= form_for :app, method: method, url: url do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <label for="name">Name</label>
        <%= f.text_field :name, class: 'form-control', id: 'name', placeholder: 'Name', value: name %>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
